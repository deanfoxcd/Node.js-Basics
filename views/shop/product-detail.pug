extends ../layouts/main-layout.pug

block content
    main.centered
        h1 #{product.title}
        hr
        img(src=product.imgUrl, alt="image")
        h2 #{product.price} 
        p #{product.description}
        form(action="/cart", method="POST") 
            btn.btn(type='submit') Add to Cart
            input(type="hidden" name="productId" value=product.id)
